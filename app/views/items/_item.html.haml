.contentRow
  %input{:type=>'hidden',:value=>item.user.id, :name => 'item_user_id'}
  .itemPic
    = item.model.class.to_s.titleize
    %br
    = item.thumb
  .itemInfo
    .itemTitle= link_to item.short_title, item
    .itemDesc= item.short_description
    .multiLinks
      = item.iconic_information(false)
    .itemIcons
      = item.manage_links
