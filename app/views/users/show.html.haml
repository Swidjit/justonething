%div
  %h1= @user.display_name
  = @user.vouches_display
  = @user.add_to_list
  = @user.manage_links
%div
  = tabbed_item_types('type')

- if @user.delegatees.size > 0 && can?(:manage, @user)
  %div
    %h2 delegates
    %h3 users can post on behalf of this account
    %ul.delegates
      = render :partial => 'delegates/delegate', :collection => DelegateDecorator.decorate(@user.delegates_as_delegator)
- if @feed_items.count == 0
  %p No items found.
- else
  %ul.feed
    = render :partial => 'items/item', :collection => ItemDecorator.decorate(@feed_items)
