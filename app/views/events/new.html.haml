= semantic_form_for @event do |f|
  = render :partial => 'items/top_of_form', :locals => { :f => f }
  = f.inputs do
    = f.input :cost
    = f.input :location
    = f.input :start_time, :as => :date_picker
    = f.input :end_time, :as => :date_picker
  = render :partial => 'items/bottom_of_form', :locals => { :f => f }