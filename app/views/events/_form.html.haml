= semantic_form_for @item do |f|
  = render :partial => 'items/top_of_form', :locals => { :f => f }
  = f.inputs do
    = f.input :cost
    = f.input :location
    = f.input :start_time, :as => :date_picker, :input_html => {:value => @item.start_time}
    = f.input :end_time, :as => :date_picker, :input_html => {:value => @item.end_time}
  = @item.bottom_of_form(f)