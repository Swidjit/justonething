= form_for(@message, :url => contact_path) do |f|

  = error_messages_for(@message)

  %div
    = f.label :name
    %br
    = f.text_field :name
  %div
    = f.label :email
    %br
    = f.text_field :email
  %div
    = f.label :subject
    %br
    = f.text_field :subject
  %div
    = f.label :body
    %br
    = f.text_area :body

  %div= f.submit "Send"